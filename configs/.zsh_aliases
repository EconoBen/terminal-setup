# Quick help/cheatsheet
help() {
    if [ -z "$1" ]; then
        # Show full help
        echo "Opening help viewer. Use arrow keys/vim keys to scroll, '/' to search, 'q' to quit."
        sleep 1
        glow -p ~/.zsh_help.md
        # Reset mouse mode after glow exits
        printf '\033[?1000l'
    else
        # Show help with direct jump to section
        case "$1" in
            nav) section="## üß≠ Navigation" ;;
            fzf) section="## üîç FZF" ;;
            git) section="## üõ†Ô∏è Git" ;;
            find) section="## üîé Search" ;;
            tools) section="## üìÅ File System Tools" ;;
            zsh) section="## ‚öôÔ∏è ZSH Extensions" ;;
            aws) section="## üöÄ AWS EC2 Management" ;;
            research) section="### Research EC2 Instance" ;;
            monitor) section="## üíª System Monitoring" ;;
            starship) section="## üöÄ Terminal Customization" ;;
            macos) section="## üçé macOS Tools" ;;
            sql) section="## üìÄ SQL and Database" ;;
            *) section="## .*$1" ;;
        esac
        # Render with glow and search with less
        glow ~/.zsh_help.md | less -R +/"$section"
    fi
}
